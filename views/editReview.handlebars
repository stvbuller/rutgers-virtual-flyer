
  <!-- Animations by Dan Eden -->
  <link rel="stylesheet" type="text/css" href="../css/animate.css">
  <!-- Custom Styles -->
  <link rel="stylesheet" type="text/css" href="../css/styles.css">
  <!-- Favicon -->
  <link rel="shortcut icon" type="image/x-icon" href="../images/favicon.ico">
  <!-- Custom Scripts -->
  <script type="text/javascript" src="../js/scripts.js"></script>


<div class="section white">
  <div class="row container">
    <div class="col s12">
    <h3>Update Your Review</h3>
        {{#each reviews}}
          <div class="row">
            <div class="col s12">
              <ul class="collection">
                <li class="collection-item">
                  <h4>{{locationName}}</h4>
                  <b>{{city}}</b><br />
                  <form action="/updateReview/{{id}}" method="post">
                    <label for="rating" class="active">Star Rating</label>
                    <textarea id="rating" class="materialize-textarea" name="rating" class="validate">{{rating}}</textarea>
                    <label for="textarea1">Review</label>
                    <textarea id="review" class="materialize-textarea validate" type="text" name="review">{{review}}</textarea>
                    <button type="submit" class="btn modal-action modal-close waves-effect waves-white btn-flat" onclick="Materialize.toast('Review updated', 4000)">Update Review</button>
                  </div>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        {{/each}}
    </div> <!-- end col s12 -->
  </div>
</div>