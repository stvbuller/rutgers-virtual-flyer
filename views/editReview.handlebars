
<div class="section white">
  <div class="row container">
    <div class="col s12">
    <h3>Update the Review</h3>
      <div class="row">
        {{#each reviews}}
          <div class="row">
            <div class="col-md-12">
              <ul class="collection">
                <li class="collection-item">
                  <h4>{{locationName}}</h4>
                  <b>{{city}}</b><br />
                  {{rating}} star rating<br />
                  <form action="/updateReview/{{id}}" method="post">
                    <label for="rating">Star Rating</label>
                    <textarea id="rating" class="materialize-textarea" name="rating">{{rating}}</textarea>
                    <label for="textarea1">Review</label>
                    <textarea id="textarea1" class="materialize-textarea" name="review">{{review}}</textarea>
                    <button type="submit" class="btn waves-effect waves-white btn-flat">Update Review</button>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        {{/each}}
      </div>
    </div> <!-- end col s12 -->
