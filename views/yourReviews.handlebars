<div class="section white">
  <div class="row container">
    <div class="col s12">
    {{#if ../isAuthenticated}}
    <h3 class="inline">{{user.firstname}}'s Reviews</h3>
    <button class="waves-effect waves-light btn modal-trigger white right" href="#rate-modal"><i class="fa fa-star red-text accent-4"></i> <span class="red-text accent-4">Write a Review</span></button>
    <div class="hide-on-large-only">
      <br />
      <br />
    </div>
  </div>
  <div class="row container">
    {{#each reviews}}
      <div class="row">
        <div class="col-md-12">
          <ul class="collection">
            <li class="collection-item">
              <h4>{{locationName}}</h4>
              <b>{{city}}</b><br />
              {{rating}} star rating<br />
              <blockquote>{{review}}</blockquote>
              <div class="right-align">
                <a href="/edit/{{id}}" class="waves-effect waves-light btn modal-trigger white"><span class="red-text accent-4"><i class="fa fa-pencil"></i></span></a>
                <a href="/deleteReview/{{id}}" class="deleteBtn waves-effect waves-light btn modal-trigger white" data-id="{{id}}" onclick="Materialize.toast('Review deleted', 4000)"><span class="red-text accent-4"><i class="fa fa-trash"></i></span></a>
              </div>
            </li>
          </ul>
        </div>
      </div>
    {{/each}}
    {{/if}}
    {{#if isAuthenticated }}

    {{ else }}
    <h4>You must log in to view this page</h4>
    <a class="waves-effect waves-light btn modal-trigger white" href="#login-modal"><span class="red-text accent-4">Log In</span></a>
    {{/if}}
  </div>
</div> <!-- end col s12 -->