<div class="container">
  <div class="section white">
    <div class="row container">
      <div class="col s12">
      <h3 id="latestreviews" class="scrollspy">Latest Reviews</h3>
        <div class="row">
          {{#each reviews}}
            <div class="row">
              <div class="col-md-12">
                <ul class="collection">
                  <li class="collection-item">
                    <h4>{{locationName}}</h4>
                    <b>{{city}}</b><br />
                    {{rating}} star rating<br />
                    <blockquote>{{review}}</blockquote>
                    <p> by {{user.firstname}}</p>
                  </li>
                </ul>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

