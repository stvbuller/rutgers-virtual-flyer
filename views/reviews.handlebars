<div class="parallax-reviews-container">
    <div class="parallax"><img src="images/coffeemugs.jpg"></div>
  </div>
  <div class="section white">
    <div class="row">
      <div class="col s12 m2 offset-m2 center-align">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <i class="fa fa-cutlery fa-5x"></i>
            <br />
            <span class="card-title">Restaurants</span>
          </div>
          <div class="card-action">
            <a href="#">Read Reviews</a>
          </div>
        </div>
      </div>
      <div class="col s12 m2 center-align">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <i class="fa fa-coffee fa-5x"></i>
            <br />
            <span class="card-title">Cafes</span>
          </div>
          <div class="card-action">
            <a href="#">Read Reviews</a>
          </div>
        </div>
      </div>
      <div class="col s12 m2 center-align">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <i class="fa fa-beer fa-5x"></i>
            <br />
            <span class="card-title">Bars</span>
          </div>
          <div class="card-action">
            <a href="#">Read Reviews</a>
          </div>
        </div>
      </div>
      <div class="col s12 m2 center-align">
        <a class="modal-trigger" href="#rate-modal">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <i class="fa fa-star fa-5x"></i>
              <br />
              <span class="card-title">Rate</span>
            </div>
            <div class="card-action">
              <a class="modal-trigger" href="#rate-modal">Rate and Review</a>
            </div>
          </div>
        </a>
      </div>
    </div>
    <div class="row">
      {{#each reviews}}
        <div class="row">
          <div class="col-md-12">
            <p>{{locationName}}</p>
            <p>{{city}}</p>
            <p>{{rating}}</p>
            <p>{{review}}</p>
          </div>
          <button>Edit</button>
          <button>Delete</button>
        </div>
      {{/each}}
    </div>
  </div>
</div>
