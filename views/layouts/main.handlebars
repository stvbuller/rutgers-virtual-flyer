<!DOCTYPE html>
<html>
<head>
  <title>RU Review</title>
  <!-- MaterializeCSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
  <!-- Google Fonts -->
  <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
  <!-- Font Awesome Library -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Materialize Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- Animations by Dan Eden -->
  <link rel="stylesheet" type="text/css" href="css/animate.css">
  <!-- Custom Styles -->
  <link rel="stylesheet" type="text/css" href="css/styles.css">
  <!-- Favicon -->
  <link rel="shortcut icon" type="image/x-icon" href="images/favicon.ico">
</head>
<body>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper red accent-4">
        <div class="container">
          <a href="/" class="brand-logo text-shadow hide-on-med-and-down">RU Review</a>
          <a id="welcome-username" href="/yourReviews">{{#if isAuthenticated}} Hello {{ user.firstname }}</a>
          <!-- desktop nav -->
          <ul class="right hide-on-med-and-down">
            <li><a href="/" class="waves-effect waves-light">Home</a></li>
            <li><a href="/yourReviews" class="waves-effect waves-light">Your Reviews</a></li>
            <li><a href="/logout" class="waves-effect waves-light">Log Out</a></li>
          </ul>
          {{/if}}
          {{#if isAuthenticated }}

          {{ else }}
          <ul class="right hide-on-med-and-down">
            <li><a class="waves-effect waves-light btn modal-trigger white" href="#login-modal"><span class="red-text accent-4">Log In</span></a></li>
            <li><a class="waves-effect waves-light btn modal-trigger white" href="#signup-modal"><span class="red-text accent-4">Sign Up</span></a></li>
            {{/if}}
          </ul>
          <!-- mobile nav -->
          <!-- mobile nav menu icon -->
          <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
          {{#if isAuthenticated}}
          <ul id="mobile-demo" class="side-nav">
            <li><a href="/" class="waves-effect waves-light">Home</a></li>
            <li><a href="/yourReviews" class="waves-effect waves-light">Your Reviews</a></li>
            <li><a href="/logout" class="waves-effect waves-light">Log Out</a></li>
          </ul>
          {{/if}}
          {{#if isAuthenticated }}

          {{ else }}
          <ul id="mobile-demo" class="side-nav">
            <li><a href="#login-modal" class="waves-effect waves-light modal-trigger">Log In</a></li>
            <li><a href="#signup-modal" class="waves-effect waves-light modal-trigger">Sign Up</a></li>
          </ul>
          {{/if}}
        </div>
      </div>
    </nav>
  </div>

  <main>
      {{{ body }}}
  </main>

   <aside>
     <div id="login-modal" class="modal">
      <form id="formLogin" class="col s12" method="POST" action="/check">
        <div class="modal-content">
          <h3>Log In</h3>
          <div class="row">
            <div class="input-field col s12">
              <input id="email" type="email" class="validate" name="username">
              <label for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password" type="password" class="validate" name="password">
              <label for="password">Password</label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn modal-action modal-close waves-effect waves-white btn-flat">Cancel</button>
          <button type="submit" class="btn modal-action modal-close waves-effect waves-white btn-flat">Submit</button>
        </div>
      </form>
    </div>
   </aside>

   <aside>
     <div id="signup-modal" class="modal">
      <form class="col s12" id="formSignup" method="POST" action="/save">
        <div class="modal-content">
          <h3>Sign Up</h3>
          <div class="row">
            <div class="input-field col s6">
              <input id="first_name" type="text" class="validate" name="firstname">
              <label for="first_name">First Name</label>
            </div>
            <div class="input-field col s6">
              <input id="last_name" type="text" class="validate" name="lastname">
              <label for="last_name">Last Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="email" type="email" class="validate" name="username">
              <label for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password" type="password" class="validate" name="password">
              <label for="password">Password</label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn modal-action modal-close waves-effect waves-white btn-flat">Cancel</button>
          <button type="submit" class="btn modal-action modal-close waves-effect waves-white btn-flat">Submit</button>
        </div>
      </form>
    </div>
   </aside>

   <aside>
     <div id="rate-modal" class="modal">
      <form class="col s12" id="formSignup" method="POST" action="/saveRating">
        <div class="modal-content">
          <h3>Review</h3>
          <div class="row">
            <div class="input-field col s12">
              <input id="location-name" type="text" class="validate" name="locationName">
              <label for="location-name">Location Name</label>
            </div>

            <!-- <div class="input-field col s6">
              <label for="dining-type">Dining Type</label>
              <br />
              <p id="dining-type" type="text" class="validate" name="diningType">
                  <input class="with-gap" name="diningType" type="radio" id="test1" />
                  <label for="test1">Restaurant</label>

                  <input class="with-gap" name="diningType" type="radio" id="test2" />
                  <label for="test2">Cafe</label>

                  <input class="with-gap" name="diningType" type="radio" id="test3"  />
                  <label for="test3">Bar</label>
              </p>
            </div> -->
          </div>
          <div class="row">

            <!-- can't get radio buttons to work -->
            <!-- <div class="input-field col s12">
              <label>City</label>
              <p>
                <input name="city" type="radio" id="newbrunswick" value="New Brunswick" class="with-gap" />
                <label for="city">New Brunswick</label>
                <input name="city" type="radio" id="piscataway" value="Piscataway" class="with-gap" />
                <label for="city">Piscataway</label>
